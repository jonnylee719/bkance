<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="2dp"
    android:layout_height="300dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:contentDescription="@string/thumbnail_description"
            android:layout_width="130dp"
            android:layout_height="183dp"
            android:padding="4dp"
            android:id="@+id/card_imageview_thumbnail"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_textview_title"
            android:layout_toRightOf="@id/card_imageview_thumbnail"
            android:layout_toEndOf="@id/card_imageview_thumbnail"
            android:layout_alignParentTop="true"
            android:text="@string/book_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_textview_author"
            android:layout_toRightOf="@id/card_imageview_thumbnail"
            android:layout_toEndOf="@id/card_imageview_thumbnail"
            android:layout_below="@id/card_textview_title"
            android:text="@string/book_author"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_textview_rating"
            android:layout_toRightOf="@id/card_imageview_thumbnail"
            android:layout_toEndOf="@id/card_imageview_thumbnail"
            android:layout_below="@id/card_textview_author"
            android:text="@string/book_rating"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_textview_description"
            android:layout_below="@id/card_imageview_thumbnail"
            android:maxLines="3"
            android:text="Must be a dimension value, which is a floating point number appended with a unit such as 14.5sp. Available units are: px (pixels), dp (density-independent pixels), sp (scaled pixels based on preferred font size), in (inches), mm (millimeters)."
            />

    </RelativeLayout>


</android.support.v7.widget.CardView>