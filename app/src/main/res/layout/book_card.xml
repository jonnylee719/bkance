<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    card_view:cardCornerRadius="2dp"
    android:elevation="2dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.android.volley.toolbox.NetworkImageView
            android:contentDescription="@string/thumbnail_description"
            android:layout_width="130dp"
            android:layout_height="180dp"
            android:id="@+id/card_imageview_thumbnail"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_textview_title"
            android:layout_toRightOf="@id/card_imageview_thumbnail"
            android:layout_toEndOf="@id/card_imageview_thumbnail"
            android:layout_alignParentTop="true"
            android:text="@string/book_title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_textview_author"
            android:layout_toRightOf="@id/card_imageview_thumbnail"
            android:layout_toEndOf="@id/card_imageview_thumbnail"
            android:layout_below="@id/card_textview_title"
            android:text="@string/book_author"
            android:textSize="14sp"
            android:paddingTop="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_textview_rating"
            android:layout_toRightOf="@id/card_imageview_thumbnail"
            android:layout_toEndOf="@id/card_imageview_thumbnail"
            android:layout_below="@id/card_textview_author"
            android:text="@string/book_rating"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_textview_description"
            android:layout_toRightOf="@id/card_imageview_thumbnail"
            android:layout_below="@id/card_textview_rating"
            android:layout_alignBottom="@id/card_imageview_thumbnail"
            android:maxLines="3"
            android:text="Must be a dimension value, which is a floating point number appended with a unit such as 14.5sp. Available units are: px (pixels), dp (density-independent pixels), sp (scaled pixels based on preferred font size), in (inches), mm (millimeters)."
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="14sp"
            />

        <Button
            android:id="@+id/card_button_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_more_button"
            android:gravity="center"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:layout_below="@+id/card_textview_description"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <Button
            android:id="@+id/card_button_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_add_button"
            android:gravity="center"
            style="@style/Widget.AppCompat.Button.Borderless"

            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:layout_below="@id/card_textview_description"
            android:layout_toLeftOf="@id/card_button_more"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>